<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginBottom="-120dp"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-120dp"
                    android:elevation="1dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    >


                    <ImageView
                        android:id="@+id/imgv_plan_lock"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/plan_lock"
                        />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/ic_plan_price_bg">


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_plan_price_tag"
                            />

                        <TextView
                            android:id="@+id/txtv_plan_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="400"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="-150dp"
                        android:src="@drawable/ic_list_border_up" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="15dp"
                  android:layout_marginEnd="15dp"
                  android:layout_marginTop="15dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:orientation="horizontal">

                  <ImageView
                      android:layout_width="25dp"
                      android:layout_height="30dp"
                      android:layout_marginStart="5dp"
                      android:layout_marginEnd="5dp"
                      android:src="@drawable/ic_member_plane"
                      />


                  <TextView
                      android:id="@+id/txtv_plan_name"
                      android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:text="plan name"
                      android:textSize="14sp"
                      android:textAlignment="center"
                      android:textStyle="bold"
                      android:maxLength="30"
                      android:maxLines="1"
                      android:textColor="@color/colorWhite"/>


              </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_plan_info"
                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan Descrabtion"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"/>



                    </LinearLayout>





                    <TextView
                        android:id="@+id/txtv_plan_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="plan descrabtion"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="14sp"
                        android:textAlignment="textStart"
                        android:textStyle="normal"
                        android:textColor="@color/colorWhite"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_plan_time_duration"
                            />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan Time Duration"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/txtv_plan_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Month"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorWhite"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:gravity="center_horizontal">


                        <TextView
                            android:id="@+id/txtv_plan_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days"
                            android:layout_marginEnd="1dp"
                            android:layout_marginStart="1dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorWhite"/>

                        </LinearLayout>

                    </LinearLayout>




                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-150dp"
                        android:src="@drawable/ic_list_border_down"/>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



</LinearLayout>